<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:system="clr-namespace:System;assembly=mscorlib">

	<!-- #region FONTSIZE -->
	<system:Double x:Key="FontSizeSmall">11</system:Double>
	<system:Double x:Key="FontSizeNormal">12</system:Double>
	<system:Double x:Key="FontSizeBig">14</system:Double>
	
	<system:Double x:Key="FontSizeH1">24</system:Double>
	<system:Double x:Key="FontSizeH2">20</system:Double>
	<system:Double x:Key="FontSizeH3">18</system:Double>
	<system:Double x:Key="FontSizeH4">16</system:Double>
	
	<system:Double x:Key="FontSizeHeader">16</system:Double>
	<system:Double x:Key="FontSizeSection">20</system:Double>
	<system:Double x:Key="FontSizeTitle">24</system:Double>
	<!-- #endregion -->

	<!-- #region FONTSIZE MENU -->
	<system:Double x:Key="MenuFontSize">12</system:Double>
	<system:Double x:Key="MenuFontSizeBig">14</system:Double>
	<!-- #endregion -->

</ResourceDictionary>
