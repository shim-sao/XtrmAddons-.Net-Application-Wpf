<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:system="clr-namespace:System;assembly=mscorlib">

	<!-- #region Label -->
    <Style x:Key="LabelFieldStyle" TargetType="{x:Type Label}">
		<Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
		<Setter Property="Foreground" Value="{DynamicResource CustomWindowTextBrush}" />
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

    <Style x:Key="LabelInputStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource LabelFieldStyle}">
        <Setter Property="Width" Value="100"/>
    </Style>

    <Style x:Key="LabelInputLongStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource LabelFieldStyle}">
        <Setter Property="Width" Value="160"/>
    </Style>

    <Style x:Key="LabelInputShortStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource LabelFieldStyle}">
        <Setter Property="Width" Value="60"/>
    </Style>
    <!-- #endregion -->
    
</ResourceDictionary>