<UserControl
    x:Class="XtrmAddons.Fotootof.Libraries.Common.Controls.Menu.MenuMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:XtrmAddons.Fotootof.Properties"
    mc:Ignorable="d">

    <DockPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        Background="#CCCCCC"
        Height="24">

        <Menu DockPanel.Dock="Top" Margin="2">
            <MenuItem Header="{x:Static p:Resources._File}">

                <MenuItem
                    Name="MenuItemFileExit"
                    Header="{x:Static p:Resources._Exit}"
                    Click="OnFileExit_Click">

                    <MenuItem.Icon>
                        <Image Source="{Binding Mode=OneWay, Source={StaticResource IconItemMenuFileExit}}" />
                    </MenuItem.Icon>
                </MenuItem>

            </MenuItem>

            <MenuItem Header="{x:Static p:Resources._Server}">

                <MenuItem
                    Header="{x:Static p:Resources._ClientNew}"
                    Name="MenuItem_ServerAddClient"
                    Click="OnServerAddClient_Click"/>

                <Separator />

                <MenuItem
                    Name="MenuItem_ServerStart"
                    Header="{x:Static p:Resources._Start}"
                    Click="OnServerStart_Click"
                    ToolTip="Start Http server."/>

                <MenuItem
                    Name="MenuItem_ServerStop"
                    Header="{x:Static p:Resources._Stop}"
                    Click="OnServerStop_Click"
                    ToolTip="Stop Http server."/>

                <MenuItem
                    Name="MenuItem_ServerRestart"
                    Header="{x:Static p:Resources._Restart}"
                    Click="OnServerRestart_Click"
                    ToolTip="Restart Http server."/>

                <Separator />

                <MenuItem
                    Name="MenuItem_ServerAddFireWall"
                    Header="{x:Static p:Resources._AddToFirewall}"
                    Click="OnServerAddToFirewall_Click"
                    ToolTip="Add Http server URL to the firewall rules. Enable external access."/>

                <MenuItem
                    Name="MenuItem_ServerRemoveFireWall"
                    Header="{x:Static p:Resources._RemoveFromFirewall}"
                    Click="OnServerRemoveFromFirewall_Click"
                    ToolTip="Remove Http server URL to the firewall rules. Disable external access."/>
            </MenuItem>

            <MenuItem Header="{x:Static p:Resources._Edition}">

                <MenuItem
                    Header="{x:Static p:Resources._Preferences}"
                    Name="MenuItem_EditionPreferences"
                    Click="OnEditionPreferences_Click"/>
                
            </MenuItem>

            <MenuItem
                Header="{x:Static p:Resources._Users}">

                <MenuItem
                    Header="{x:Static p:Resources._UsersList}"
                    Name="UI_MI_Users"
                    Click="OnUsersListClick"/>

                <MenuItem
                    Header="{x:Static p:Resources._UsersNew}"
                    Name="MenuItem_AddUser"
                    Click="OnAddUser_Click"/>
            </MenuItem>

            <MenuItem
                Header="{x:Static p:Resources._Sections}">

                <MenuItem
                    Header="{x:Static p:Resources._AddSection}"
                    x:Name="MenuItem_AddSection"
                    Click="OnAddSection_Click"/>
            </MenuItem>

            <MenuItem
                Header="{x:Static p:Resources._Display}">

                <MenuItem
                    Header="{x:Static p:Resources._LogsWindow}"
                    Name="MenuItemDisplayLogsWindow"
                    Click="OnDisplayLogsWindowClick"
                    IsChecked="False"/>

                <MenuItem
                    Header="{x:Static p:Resources._Language}"
                    Name="MenuItemDisplayLanguage">

                    <MenuItem
                        Header="Français"
                        Name="MenuItemDisplayLanguageFr"
                        Click="OnDisplayLanguageFrClick"
                        IsChecked="False"/>

                </MenuItem>
            </MenuItem>

            <MenuItem
                Header="{x:Static p:Resources._Help}">

                <MenuItem
                    Header="{x:Static p:Resources._About}"
                    Name="MenuItemHelpAboutList"
                    Click="OnDisplayHelpAboutClick"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</UserControl>