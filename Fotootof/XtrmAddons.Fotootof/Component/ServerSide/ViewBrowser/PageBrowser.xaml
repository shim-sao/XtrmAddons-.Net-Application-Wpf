<base:PageBase
    x:Class="XtrmAddons.Fotootof.Component.ServerSide.ViewBrowser.PageBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:XtrmAddons.Fotootof.Culture.Properties;assembly=XtrmAddons.Fotootof.Culture"
    xmlns:base="clr-namespace:XtrmAddons.Fotootof.Lib.Base.Classes.Pages;assembly=XtrmAddons.Fotootof.Lib.Base"
    xmlns:ucbrowser="clr-namespace:XtrmAddons.Fotootof.Libraries.ServerSide.Controls.TreeViews"
    xmlns:uclistviews="clr-namespace:XtrmAddons.Fotootof.Libraries.ServerSide.Controls.ListViews"
    xmlns:ucmenu="clr-namespace:XtrmAddons.Fotootof.Libraries.ServerSide.Menu"
    mc:Ignorable="d"
    ShowsNavigationUI="False"
    Title="{x:Static p:Resources.Browser}"
    Style="{StaticResource ResourceKey=PageContent}"
    Background="{StaticResource ResourceKey=LightGrey}"
    SizeChanged="Window_Resize"
    Loaded="Window_Loaded">

    <Grid x:Name="GridRoot">

        <StackPanel
            Orientation="Vertical"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Stretch"
                x:Name="TopControls">

                <!-- #region Main navigation -->
                <Border>
                    <ucmenu:MenuServerMain
                        x:Name="NavigatorMenu"/>
                </Border>
                <!-- #endegion Main navigation -->

            
                <!-- #region Breadcrumbs -->
                <Border>
                    <TextBlock
                        x:Name="Breadcrumbs"
                        Margin="10,5"
                        FontSize="{StaticResource ResourceKey=FontSizeNormal}" />
                </Border>
                <!-- #endregion Breadcrumbs -->
            </StackPanel>


            <Grid 
                x:Name="MiddleContents"
                HorizontalAlignment="Stretch">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="240" x:Name="ColStorages"/>
                    <ColumnDefinition x:Name="ColumnGridSplitter" Width="5"/>
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <ucbrowser:TreeViewSystemStorage
                    Grid.Row="0"
                    Grid.Column="0"
                    x:Name="UcTreeViewDirectories"
                    IsHeaderVisible="Visible"
                    Background="Coral"/>



                <GridSplitter
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />

                <Grid
                    Grid.Row="0"
                    Grid.Column="2"
                    x:Name="GridFiles"
                    Margin="5,2">

                    <uclistviews:ListViewStoragesServer
                        x:Name="UcListViewStoragesServer"/>
                </Grid>
            </Grid>

        </StackPanel>

    </Grid>
</base:PageBase>
