<Window x:Class="XtrmAddons.Fotootof.LayoutsOld.Windows.About.WindowAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:p="clr-namespace:XtrmAddons.Fotootof.Culture.Properties;assembly=XtrmAddons.Fotootof.Culture"
        xmlns:local="clr-namespace:XtrmAddons.Fotootof.LayoutsOld.Windows.About"
        mc:Ignorable="d"
		Title="{x:Static p:Resources.WindowAboutTitle}"
		Width="480"
		Height="340"
		Loaded="Window_Load">
	
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="160" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Image Source="{StaticResource BitmapImageAbout}" />

		<StackPanel Grid.Row="1">

			<!-- #region : Field Product Name -->
			<StackPanel Style="{StaticResource StackPanelFormFieldStyle}"
						Margin="10,1">

				<TextBlock Text="{x:Static p:Resources.ProductName}"
						   Style="{StaticResource TextBlockFieldLabelStyle}"/>

				<TextBlock Text="{Binding AssemblyTitle}"
						   Style="{StaticResource TextBlockFieldTextStyle}"/>

			</StackPanel>
			<!-- #endregion : Product Name -->


			<!-- #region : Field Version -->
			<StackPanel Style="{StaticResource StackPanelFieldStyle}">

				<TextBlock Text="{x:Static p:Resources.Version}"
						   Style="{StaticResource TextBlockFieldLabelStyle}"/>

				<TextBlock Text="{Binding AssemblyVersion}"
						   Style="{StaticResource TextBlockFieldTextStyle}"/>

			</StackPanel>
			<!-- #endregion : Version -->


			<!-- #region : Field Copyright -->
			<StackPanel Style="{StaticResource StackPanelFieldStyle}">

				<TextBlock Text="{x:Static p:Resources.Copyright}"
						   Style="{StaticResource TextBlockFieldLabelStyle}"/>

				<TextBlock Text="{Binding AssemblyCopyright}"
						   Style="{StaticResource TextBlockFieldTextStyle}"/>

			</StackPanel>
			<!-- #endregion : Copyright -->


			<!-- #region : Field Company Name -->
			<StackPanel Style="{StaticResource StackPanelFieldStyle}">

				<TextBlock Text="{x:Static p:Resources.Company}"
						   Style="{StaticResource TextBlockFieldLabelStyle}"/>

				<TextBlock Text="{Binding AssemblyCompany}"
						   Style="{StaticResource TextBlockFieldTextStyle}"/>

			</StackPanel>
			<!-- #endregion : Company Name -->


			<!-- #region : Field Smashicons -->
			<StackPanel Style="{StaticResource StackPanelFieldStyle}">

				<TextBlock Style="{StaticResource TextBlockFieldTextStyle}">           
					<Hyperlink NavigateUri="https://www.flaticon.com/authors/smashicons/">
						Icon By Smashicons for FlatIcon
					</Hyperlink>
				</TextBlock>
			</StackPanel>
			<!-- #endregion : Smashicons -->

		</StackPanel>
	</Grid>
</Window>
