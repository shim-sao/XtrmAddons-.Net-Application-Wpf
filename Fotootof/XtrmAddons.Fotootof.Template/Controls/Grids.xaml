<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Grid -->
	<Style x:Key="Grid_Fieldset_Menu"
		   TargetType="{x:Type Grid}">
		<Setter Property="HorizontalAlignment"
				Value="Stretch" />
		<Setter Property="VerticalAlignment"
				Value="Bottom" />
		<Setter Property="Background"
				Value="{StaticResource Panton_3}" />
		<Setter Property="Height"
				Value="30" />
	</Style>

    <Style x:Key="MiddleContents" TargetType="{x:Type Grid}">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="Red"/>
    </Style>

    <Style x:Key="Root" TargetType="{x:Type Grid}">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="Grid_ImageToolTip" TargetType="{x:Type Grid}">
        <Setter Property="Width" Value="512"/>
        <Setter Property="Height" Value="512"/>
        <Setter Property="Background" Value="Black"/>
    </Style>

</ResourceDictionary>