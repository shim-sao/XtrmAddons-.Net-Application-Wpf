<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- PasswordBox -->
	<Style x:Key="PasswordBox_FieldInput_Required" TargetType="{x:Type PasswordBox}">
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="FontSize" Value="{StaticResource ResourceKey=FontSizeNormal}"/>
		<Setter Property="Width" Value="320"/>
		<Setter Property="Padding" Value="5,0" />

		<Style.Triggers>
			<Trigger Property="Validation.HasError"
					 Value="true">
				<Setter Property="BorderBrush"
						Value="{StaticResource Error}"/>
				<Setter Property="ToolTip"
						Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
			</Trigger>
			<Trigger Property="Validation.HasError"
					 Value="false">
				<Setter Property="BorderBrush"
						Value="{StaticResource Ready}"/>
				<Setter Property="ToolTip"
						Value=""/>
				<Setter Property="ToolTipService.IsEnabled"
						Value="False"/>
			</Trigger>
		</Style.Triggers>
	</Style>

</ResourceDictionary>