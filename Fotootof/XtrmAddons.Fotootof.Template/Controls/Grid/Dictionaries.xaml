<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:system="clr-namespace:System;assembly=mscorlib">

	<!-- Grid -->
	<Style x:Key="GridRoot" TargetType="{x:Type Grid}">
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="VerticalAlignment" Value="Stretch"/>
	</Style>
	
	<Style x:Key="GridFieldsetMenu" TargetType="{x:Type Grid}">
		<Setter Property="Background" Value="{DynamicResource ChromeMediumLowBrush}" />
		<Setter Property="Height" Value="30" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Bottom" />
	</Style>

	<Style x:Key="GridMiddleContents" TargetType="{x:Type Grid}" BasedOn="{StaticResource GridRoot}">
		<Setter Property="Background" Value="Transparent"/>
	</Style>

	<Style x:Key="Grid_ImageToolTip" TargetType="{x:Type Grid}">
		<Setter Property="Background" Value="{DynamicResource ChromeMediumBrush}"/>
		<Setter Property="Height" Value="512"/>
        <Setter Property="Width" Value="512"/>
	</Style>




	<!-- Obsolete -->
	<Style x:Key="MiddleContents" TargetType="{x:Type Grid}" BasedOn="{StaticResource GridMiddleContents}"></Style>
	<Style x:Key="Root" TargetType="{x:Type Grid}" BasedOn="{StaticResource GridRoot}"></Style>

</ResourceDictionary>