<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:system="clr-namespace:System;assembly=mscorlib">




	<!-- #region TextBlock -->
	<Style x:Key="TextBlock_Field" TargetType="{x:Type TextBlock}">
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="FontSize" Value="{StaticResource ResourceKey=FontSizeNormal}" />
	</Style>

	<Style x:Key="TextBlock_FieldLabel" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_Field}">
		<Setter Property="Width" Value="100"/>
	</Style>
	
	<Style x:Key="TextBlock_FieldLabelCb" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_FieldLabel}">
		<Setter Property="Margin" Value="0,0,10,0" />
		<Setter Property="Width" Value="auto"/>
	</Style>

	<Style x:Key="TextBlock_FieldLabelArea" TargetType="{x:Type TextBlock}">
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="FontSize" Value="{StaticResource ResourceKey=FontSizeNormal}"/>
		<Setter Property="Width" Value="100"/>
	</Style>

	<Style x:Key="TextBlock_FieldLabelLong" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_Field}">
		<Setter Property="Width" Value="160"/>
	</Style>

	<Style x:Key="TextBlock_FieldLabelShort" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_FieldLabel}">
		<Setter Property="Width" Value="60"/>
	</Style>

	<Style x:Key="TextBlock_FieldText" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_Field}">
		<Setter Property="Width" Value="auto"/>
	</Style>

	<Style x:Key="TextBlock_Tooltip" TargetType="{x:Type TextBlock}">
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Foreground" Value="{StaticResource Panton_2}" />
		<Setter Property="TextAlignment" Value="Center" />
		<Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
	</Style>
	<!-- #endregion Obsolete -->
	
	
	<!-- #region Obsolete -->
	<Style x:Key="FieldLabel" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_FieldLabel}"></Style>
	<Style x:Key="FieldLabelCb" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_FieldLabelCb}"></Style>
	<Style x:Key="FieldLabelArea" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_FieldLabelArea}"></Style>
	<Style x:Key="FieldLabelLong" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_FieldLabelLong}"></Style>
	<Style x:Key="FieldLabelShort" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_FieldLabelShort}"></Style>
	<!-- #endregion Obsolete -->




	<!-- TextBlock -->

	<Style x:Key="SettingsHeader" TargetType="{x:Type TextBlock}">
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="FontSize" Value="{StaticResource ResourceKey=FontSizeBig}" />
		<Setter Property="Margin" Value="5" />
		<Setter Property="Foreground" Value="{StaticResource ResourceKey=LightGrey}" />
	</Style>

</ResourceDictionary>