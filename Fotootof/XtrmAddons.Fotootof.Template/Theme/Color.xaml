<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Generic colors -->
    <SolidColorBrush x:Key="Transparent" Color="Transparent" />
    <SolidColorBrush x:Key="Panton0" Color="#333333" />
    <SolidColorBrush x:Key="Panton1" Color="#9ED54C" />
    <SolidColorBrush x:Key="Panton2" Color="#59A80F" />
    
    <SolidColorBrush x:Key="DarkGrey" Color="#424242" />
    <SolidColorBrush x:Key="LightBlack" Color="#111111" />
    <SolidColorBrush x:Key="LightGrey" Color="#E0E0E0" />
    <SolidColorBrush x:Key="MediumGrey" Color="DarkGray" />
    
    <!-- Generic colors messages -->
    <SolidColorBrush x:Key="Ready" Color="#A2C176" />
    <SolidColorBrush x:Key="Warning" Color="#E0110F" />
</ResourceDictionary>