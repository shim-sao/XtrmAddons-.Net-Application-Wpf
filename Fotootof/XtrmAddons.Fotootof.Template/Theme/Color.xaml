<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:system="clr-namespace:System;assembly=mscorlib">
	
	<!-- Obsolete : Move to theme color -->
	
	<!-- Generic colors -->
    <SolidColorBrush x:Key="Transparent" Color="Transparent" />
    
    <!-- White -->
    <SolidColorBrush x:Key="Panton_0" Color="#FFFFFF" />
	<SolidColorBrush x:Key="White" Color="#FFFFFF" />
    
    <!-- Black -->
    <SolidColorBrush x:Key="Panton_1" Color="#000000" />
	<SolidColorBrush x:Key="Black" Color="#000000" />
    
    <!-- LightBlack -->
    <SolidColorBrush x:Key="Panton_2" Color="#111111" />
	<SolidColorBrush x:Key="LightBlack" Color="#111111" />
	
    <!-- LightGrey -->
    <SolidColorBrush x:Key="Panton_3" Color="#E0E0E0" />
    <SolidColorBrush x:Key="LightGrey" Color="#E0E0E0" />

    <!-- DarkGrey -->
    <SolidColorBrush x:Key="Panton_4" Color="#424242" />
	<SolidColorBrush x:Key="DarkGrey" Color="#424242" />

    <!-- MediumGrey -->
    <SolidColorBrush x:Key="Panton_5" Color="DarkGray" />
    <SolidColorBrush x:Key="MediumGrey" Color="DarkGray" />


    <!-- Generic colors messages -->
    <SolidColorBrush x:Key="Ready" Color="#A2C176" />
    <SolidColorBrush x:Key="Warning" Color="Orange" />
    <SolidColorBrush x:Key="Error" Color="Red" />

	<SolidColorBrush x:Key="RoundedButton" Color="#FF9900" />

</ResourceDictionary>